<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
   <%= yield(:head) %>
</head>
 <body>
	<header class="navbar navbar-inverse navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/header' %>
        </div>
      </nav>
    </header>
	  <div id="main" role="main">
	      <div class="container">
	        <div class="content">
	           <div class="row">
		        <% if user_signed_in? %>
		         <div class="span2">
			      <%= render 'layouts/lhn' %>	             
	            </div>
	            <% end %>
	            <div class="span10">
		          <div class="row">
			       <div class="header">
			         <h5><%= @header%></h5>
			       </div>
			      <div class="content_frame">
	              <%= render 'layouts/messages' %>
	              <%= yield %>
	              </div>
	            </div>
	           </div>
	          </div>
	          <footer>
		        <%= debug(params) if Rails.env.development? %>
	          </footer>
	        </div>
	      </div> <!--! end of .container -->
	    </div> <!--! end of #main -->
	  </body>
</html>