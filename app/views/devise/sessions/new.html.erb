<%= javascript_tag do %>
  window.facebookURL = '<%= j user_omniauth_authorize_path(:facebook) %>';
<% end %>
<div id='facebook'></div>

<div class='text_line'>
<span class='text_inline'><b><%= t('or')%></b></span>
</div>

<div class='row-fluid'>
<div class="span7" style="float: none; margin: 0 auto;">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
 
    <%= f.input :email, placeholder:  t('email_adr') %>
    <%= f.input :password, placeholder:  t('password'), label: t('password') %>
    <%= f.input :remember_me, :as => (:boolean if devise_mapping.rememberable?), :inline_label => "Remember me", :label => false  %>
    <%= link_to "#{t('forgot_password')}?", new_password_path(resource_name), :class => 'link_min' %></br></br>
    <%= f.button :submit, "LOG IN", :class => 'btn btn-inverse' %>

<% end %>
</div>
</div>
